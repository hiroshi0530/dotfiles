{
  "files.encoding": "utf-8",
  "editor.tabCompletion": false,
  //"java.errors.incompleteClasspath.severity": "ignore",
  "editor.renderControlCharacters": true,
  "[cpp]": {
    "editor.quickSuggestions": false
  },
  "[c]": {
    "editor.quickSuggestions": false
  },
  
  "vim.leader": "<space>",               //スペースをリーダーに設定
  "vim.useSystemClipboard": true,

  //vim normal mode keybind
  "vim.insertModeKeyBindings": [
    {"before":["j", "j"],     "after":["<Esc>"]}
    {"before":["<C-j>"],      "after":["<Esc>", "g", "j", "a"]}
    {"before":["<C-k>"],      "after":["<Esc>", "g", "k", "a"]}
    {"before":["<C-h>"],      "after":["<Esc>", "h", "a"]}
    {"before":["<C-l>"],      "after":["<Esc>", "l", "a"]}
  ],

  //vim normal mode keybind
  "vim.normalModeKeyBindings": [
  // "vim.otherModesKeyBindings": [
    //space + w : 保存
    {
      "before": ["leader","w"],
      "after": [],
      "commands": [
        {
          "command": "workbench.action.files.save",
          "args": []
        }
      ]
    },

    //space + q : アクティブなエディタを閉じる
    {
      "before": ["leader","q"],
      "after": [],
      "commands": [
        {
          "command": "workbench.action.closeActiveEditor",
          "args": []
        }
      ]
    },

    //space + s : エディタを左右に分割
    {
      "before": ["leader","s"],
      "after": [],
      "commands": [
        {
          "command": "workbench.action.splitEditor",
          "args": []
        }
      ]
    },

    {"before": ["H"],        "after": ["^"]}, 
    {"before": ["J"],        "after": ["}"]}, 
    {"before": ["K"],        "after": ["{"]}, 
    {"before": ["L"],        "after": ["$"]}, 

    {"before": ["j"],        "after": ["g", "j"]}, 
    {"before": ["k"],        "after": ["g", "k"]}, 
    {"before": ["<CR>"],     "after": ["A", "<CR>", "ESC"]}, 

    {"before": ["n"],        "after" : ["n", "z", "z"]}, 
    {"before": ["N"],        "after" : ["N", "z", "z"]}, 
    {"before": ["*"],        "after" : ["*", "z", "z"]}, 
    {"before": ["#"],        "after" : ["#", "z", "z"]}, 

    {"before": ["m"],        "after": ["%"]}, 
    {"before": ["=", "="],   "after": ["g", "g" ,"G", "\'", "\'"]}, 

    {"before": ["<C-v>"],    "after": ["<ESC>", "\"", "*", "p", "a"]}, 

    {"before": ["<Leader>", "p", "p"],      "after": ["d", "i", "w", "\"", "0", "P"]}, 


    //space + t : 右のタブに移動
    {
      "before": ["leader","t"],
      "after": ["g","t"]
    },

    //space + T : 左のタブに移動
    {
      "before": ["leader","T"],
      "after": ["g","T"]
    },

    //space + tab : 分割したウィンドウを右方向に移動
    {
      "before": ["leader","<tab>"],
      "after": ["<C-w>","w"]
    }
  ],

    "vim.visualModeKeyBindingsNonRecursive": [
      {"before": ["H"],"after"    : ["^"]},
      {"before": ["J"],"after"    : ["}"]},
      {"before": ["K"],"after"    : ["{"]},
      {"before": ["L"],"after"    : ["$"]},
    ],



  "workbench.colorTheme": "Monokai Dimmed",

  //末尾の空白を自動的に削除
  "files.trimTrailingWhitespace": true,

  //最終行に改行コードを挿入
  "files.insertFinalNewline": true,

  // パンくずリストの表示
  "breadcrumbs.enabled": true

}
